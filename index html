    <script>
        // Simple wallet connection simulation
        document.getElementById('connectWallet').addEventListener('click', function() {
            const walletAddress = '0x' + Math.random().toString(16).substr(2, 40);
            document.getElementById('walletAddress').textContent = walletAddress;
            this.textContent = 'CONNECTED';
            this.style.background = 'green';
        });

        // Game navigation
        function showGame(game) {
            document.getElementById('mainContent').style.display = 'none';
            if (game === 'slots') {
                document.getElementById('slotsGame').style.display = 'block';
            }
            // Would add others here
        }

        function hideGame() {
            document.getElementById('slotsGame').style.display = 'none';
            // Hide other games here
            document.getElementById('mainContent').style.display = 'block';
        }

        // Slot machine logic
        const symbols = ['üê∂', 'üê∏', 'üçå', 'üí©', 'üöÄ', 'üëë'];
        function spinSlots() {
            const spinBtn = document.getElementById('spin-btn');
            spinBtn.disabled = true;
            spinBtn.textContent = 'SPINNING...';
            
            const reels = [
                document.getElementById('reel1'),
                document.getElementById('reel2'),
                document.getElementById('reel3')
            ];
            
            let spins = 0;
            const totalSpins = 20;
            const spinInterval = setInterval(() => {
                reels.forEach(reel => {
                    reel.textContent = symbols[Math.floor(Math.random() * symbols.length)];
                });
                
                spins++;
                if (spins >= totalSpins) {
                    clearInterval(spinInterval);
                    checkResult(reels);
                    spinBtn.disabled = false;
                    spinBtn.textContent = 'SPIN (0.01 ETH)';
                }
            }, 100);
        }
        
        function checkResult(reels) {
            const resultText = document.getElementById('slotsResult');
            const values = reels.map(reel => reel.textContent);
            
            if (values[0] === values[1] && values[1] === values[2]) {
                resultText.textContent = 'JACKPOT! YOU WON 0.1 ETH!';
                resultText.style.color = 'lime';
            } else if (values[0] === values[1] || values[1] === values[2]) {
                resultText.textContent = 'Small win! You got 0.02 ETH back';
                resultText.style.color = 'yellow';
            } else {
                resultText.textContent = 'You lost! Try again degen!';
                resultText.style.color = 'red';
            }
        }
